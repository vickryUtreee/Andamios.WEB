<body class="vertical-layout page-header-light vertical-menu-collapsible register-bg vertical-dark-menu 1-column blank-page blank-page " data-open="click" data-menu="vertical-dark-menu" data-col="1-column">
    <div class="row">

        <div class="col s12">
            <div class="container">

                <div id="register-page" class="row">

                    <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 register-card bg-opacity-9 animated fadeIn">

                        <form class="register-form" asp-controller="UsuarioService" asp-action="Register" method="post">

                            <div class="row">
                                <div class="input-field col s12">
                                    <h4 class="ml-4 green-text center-align">Formulario de Registro</h4>
                                    <p class="ml-4"></p>
                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">person_outline</i>
                                    <input class="validate" id="username" type="text" asp-for="UserName"
                                           value="@Model.UserName">
                                    <label for="username" class="center-align">Usuario</label>
                                    <span asp-validation-for="UserName" class="red-text"></span>
                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">mail_outline</i>
                                    <input class="validate" id="email" type="email" name="Email" asp-for="@Model.Email">
                                    <label for="email">Email</label>
                                    <span asp-validation-for="Email" class="red-text"></span>

                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">face</i>
                                    <input class="validate" id="nombre" type="text" asp-for="Nombre" value="@Model.Nombre">
                                    <label for="username" class="center-align">Nombre</label>
                                    <span asp-validation-for="Nombre" class="red-text"></span>

                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">face</i>
                                    <input class="validate" id="apellido" type="text" asp-for="Apellido" value="@Model.Apellido">
                                    <label for="username" class="center-align">Apellido</label>
                                    <span asp-validation-for="Apellido" class="red-text"></span>

                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">lock_outline</i>
                                    <input class="validate" id="password" type="password" asp-for="Password" value="@Model.Password">
                                    <label for="password">Contraseña</label>
                                    <span asp-validation-for="Password" class="red-text"></span>

                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">lock_outline</i>
                                    <input id="password-again" type="password" asp-for="ConfirmPassword">
                                    <label for="password-again">Confirmación de contraseña</label>
                                    <span asp-validation-for="ConfirmPassword" class="red-text"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <button type="submit" class="btn waves-effect waves-light border-round green col s12">
                                        <i class="material-icons dp48">save</i>
                                        Registrar
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <p class="margin medium-small"><a asp-action="Login">Está registrado? Iniciar sesión</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/app-assets/vendors/jquery-validation/jquery.validate.js"></script>
    <script src="~/app-assets/vendors/jquery-validation/additional-methods.js"></script>
    <script src="~/app-assets/vendors/jquery-cookies/jquery.cookies.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- BEGIN VENDOR JS-->
    <script src="~/app-assets/js/vendors.min.js" type="text/javascript"></script>
    <!-- BEGIN VENDOR JS-->
    <!-- BEGIN PAGE VENDOR JS-->
    <!-- END PAGE VENDOR JS-->
    <!-- BEGIN THEME  JS-->
    <script src="~/app-assets/js/plugins.js" type="text/javascript"></script>
    <script src="~/app-assets/js/custom/custom-script.js" type="text/javascript"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/app-assets/js/toastr.init.js" type="text/javascript"></script>

    <!-- END THEME  JS-->
    <!-- BEGIN PAGE LEVEL JS-->
    <!-- END PAGE LEVEL JS-->
    <!-- BEGIN MENSAJES TOAST-->

    <script>

    Toastr.init("@mensaje.Tipo", "@mensaje.Titulo", "@mensaje.Texto");

    </script>

</body>
</html>