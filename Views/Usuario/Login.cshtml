    <script>
    Toastr.init("@mensaje.Tipo", "@mensaje.Titulo", "@mensaje.Texto");

    @*if (@mensaje.Texto.Length > 0)
            {
                toastr.success('El usuario fue creado satisfactoriamente', 'Usuario Creado');
            }
        toastr.options = {
            "closeButton": true,
            "debug": false,
